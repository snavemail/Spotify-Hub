// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// whatever spotify gives me from get songs
model Track {
  id         Int       @id @default(autoincrement())
  title      String
  artist     Artist[]
  thumbnail  String
  url        String
  duration   String
  like       Int       @default(0)
  dislike    Int       @default(0)
  likeData   DateTime
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  Playlist   Playlist? @relation(fields: [playlistId], references: [id])
  playlistId Int?
}

// whatever spotify gives me from login
model User {
  id         Int      @id @default(autoincrement())
  spotifyId  String   @unique
  spotifyURL String
  email      String   @unique
  name       String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Playlist {
  id        Int      @id @default(autoincrement())
  title     String
  songs     Track[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Artist {
  id        Int      @id @default(autoincrement())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Track     Track?   @relation(fields: [trackId], references: [id])
  trackId   Int?
}
